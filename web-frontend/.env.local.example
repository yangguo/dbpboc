# MongoDB Configuration for MongoDB Search
# Copy this file to .env.local and update with your MongoDB connection details

# MongoDB Connection URL
MONGODB_URL=mongodb://localhost:27017
# Alternative: MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net

# MongoDB Database Name
MONGODB_DB=your_database_name

# MongoDB Collection Name (optional, defaults to 'pbocdtl')
MONGODB_COLLECTION=your_collection_name

# Next.js Environment Variables (for client-side access)
NEXT_PUBLIC_MONGODB_URL=mongodb://localhost:27017
NEXT_PUBLIC_MONGODB_DB=your_database_name
NEXT_PUBLIC_MONGODB_COLLECTION=your_collection_name